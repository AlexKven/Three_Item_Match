<UserControl x:ConnectionId='1'
    x:Class="Three_Item_Match.Card"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Three_Item_Match"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="200"                                      >
    <Border IsHitTestVisible="False" BorderThickness="4" BorderBrush="Black" Background="White" CornerRadius="20" Width="200" Height="300" VerticalAlignment="Top" HorizontalAlignment="Left">
        <Grid x:Name="ShapeGrid" Margin="20" VerticalAlignment="Center"/>
        <Border.RenderTransform>
            <ScaleTransform CenterX="0" CenterY="0" x:Name="Scale"/>
        </Border.RenderTransform>
    </Border>
</UserControl>

