<Page
    x:Class="Three_Item_Match.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Three_Item_Match"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#222266">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10" Click="Button_Click" RequestedTheme="Dark">Randomize</Button>
        <Canvas x:Name="MainCanvas" Grid.Row="1" SizeChanged="Canvas_SizeChanged">

        </Canvas>
    </Grid>
</Page>
