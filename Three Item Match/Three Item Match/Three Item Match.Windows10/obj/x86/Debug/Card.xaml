<UserControl
    x:Class="Three_Item_Match.Card"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Three_Item_Match"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ScrollViewer x:ConnectionId='1' VerticalScrollMode="Disabled" HorizontalScrollMode="Disabled" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden"                                      >
        <Grid x:ConnectionId='2' x:Name="MainGrid" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Border x:ConnectionId='3' x:Name="BackBorder" Visibility="Visible" CornerRadius="20" Background="#C080C0" Width="200" Height="300" BorderThickness="2" BorderBrush="Black">
                <Grid VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="20,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Rectangle Fill="#800080" Margin="0,2,0,2"/>
                    <Rectangle Fill="#600060" Margin="25,2,0,2" Grid.Row="1"/>
                    <Rectangle Fill="#A000A0" Margin="50,2,0,2" Grid.Row="2"/>
                    <TextBlock FontFamily="Comic Sans MS" Foreground="White" FontSize="36" HorizontalAlignment="Left" Margin="5,5,0,5">Three</TextBlock>
                    <TextBlock FontFamily="Comic Sans MS" Foreground="White" FontSize="36" HorizontalAlignment="Left" Grid.Row="1" Margin="30,5,0,5">Item</TextBlock>
                    <TextBlock FontFamily="Comic Sans MS" Foreground="White" FontSize="36" HorizontalAlignment="Left" Grid.Row="2" Margin="55,5,0,5">Match</TextBlock>
                </Grid>
            </Border>
            <Border x:ConnectionId='4' x:Name="FrontBorder" Visibility="Collapsed" BorderThickness="2" BorderBrush="Black" Background="White" CornerRadius="20" Width="200" Height="300">
                <Grid x:ConnectionId='5' x:Name="ShapeGrid" Margin="20" VerticalAlignment="Center"/>
            </Border>
            <Grid.RenderTransform>
                <ScaleTransform x:ConnectionId='6' CenterX="0" CenterY="0" x:Name="Scale"/>
            </Grid.RenderTransform>
            <Grid.Projection>
                <PlaneProjection x:ConnectionId='7' CenterOfRotationX="0.5" CenterOfRotationY="0.5" CenterOfRotationZ="0.5" x:Name="Projection"/>
            </Grid.Projection>
        </Grid>
    </ScrollViewer>
</UserControl>

